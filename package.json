{
  "name": "sms-blossom-frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc -b && vite build",
    "preview": "vite preview --host",
    "lint": "eslint . --ignore-pattern 'src/api/sdk/**'",
    "format": "prettier -w .",
    "api:generate": "openapi -i openapi/openapi.yaml -o src/api/sdk --client fetch --useOptions --useUnionTypes",
    "analyze": "vite build && node ./node_modules/rollup-plugin-visualizer/dist/plugin/index.js stats.html"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@shopify/app-bridge": "^3.7.10",
    "@shopify/app-bridge-utils": "^3.5.1",
    "@shopify/polaris": "^13.0.0",
    "@shopify/polaris-icons": "^8.6.0",
    "@tanstack/react-query": "^5.59.16",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "react-router-dom": "^6.27.0",
    "recharts": "^2.12.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@shopify/checkout-ui-extensions-react": "^0.27.3",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.12.12",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.7.0",
    "openapi-typescript-codegen": "^0.29.0",
    "prettier": "^3.3.3",
    "rollup-plugin-visualizer": "^5.12.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.1",
    "vite-plugin-mkcert": "^1.17.6"
  }
}

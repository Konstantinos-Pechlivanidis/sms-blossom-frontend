{
  "name": "sms-blossom-frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "npm@10.x",
  "scripts": {
    "dev": "vite",
    "dev:shopify": "shopify app dev",
    "build": "tsc --noEmit && vite build",
    "typecheck": "tsc --noEmit",
    "build:verify": "npm run build && node scripts/check-build.js",
    "preview": "vite preview --host",
    "lint": "eslint .",
    "format": "prettier -w .",
    "api:generate": "openapi -i docs_backend/openapi.yaml -o src/lib/api --client fetch --useOptions --useUnionTypes --exportSchemas true",
    "check": "npm run api:generate && npm run lint && npm run typecheck && vite build --emptyOutDir",
    "analyze": "vite build && node ./node_modules/rollup-plugin-visualizer/dist/plugin/index.js stats.html",
    "test": "vitest run",
    "test:ui": "vitest",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage",
    "bundle:report": "vite build && npx vite-bundle-visualizer",
    "bundle:analyze": "vite build --mode production && npx vite-bundle-visualizer --open",
    "bundle:size": "vite build && npx bundle-analyzer dist/assets/*.js",
    "check:all": "npm run typecheck && npm run lint && npm run test && npm run test:e2e && npm run build",
    "doctor": "node scripts/doctor.js",
    "ext:typecheck": "tsc -p extensions/tsconfig.json --noEmit",
    "ext:build": "shopify app build",
    "ext:size": "node scripts/check-extension-size.mjs",
    "ext:verify": "npm run ext:build && npm run ext:size",
    "docs:build": "echo 'Documentation built successfully'",
    "docs:serve": "echo 'Documentation server would start here'",
    "docs:scan": "find docs/shopify-frontend -name '*.mdx' -o -name '*.md' | head -10"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@shopify/app-bridge": "^3.7.10",
    "@shopify/app-bridge-react": "^4.2.7",
    "@shopify/app-bridge-utils": "^3.5.1",
    "@shopify/checkout-ui-extensions": "2025.10.0",
    "@shopify/polaris": "^13.0.0",
    "@shopify/polaris-icons": "^8.6.0",
    "@tanstack/react-query": "^5.59.16",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "react-router-dom": "^6.27.0",
    "recharts": "^2.12.7"
  },
  "overrides": {
    "eslint-plugin-react-hooks": "^6.0.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@axe-core/react": "^4.10.2",
    "@eslint/js": "^9.8.0",
    "@playwright/test": "^1.56.0",
    "@shopify/checkout-ui-extensions": "latest",
    "@shopify/cli": "3.85.4",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.14",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.12.12",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "eslint": "^9.37.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^6.0.0",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.0.0",
    "msw": "^2.11.3",
    "openapi-typescript": "^7.9.1",
    "openapi-typescript-codegen": "^0.29.0",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "rollup-plugin-visualizer": "^5.14.0",
    "tailwindcss": "^4.1.14",
    "terser": "^5.44.0",
    "typescript": "5.6.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^5.4.1",
    "vite-plugin-mkcert": "^1.17.6",
    "vitest": "^3.2.4",
    "yaml": "^2.5.1",
    "zod": "^4.1.12"
  }
}

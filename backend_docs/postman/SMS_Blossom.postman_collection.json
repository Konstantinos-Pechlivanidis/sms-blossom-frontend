  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set default values if not already set",
          "if (!pm.collectionVariables.get('base_url')) {",
          "  pm.collectionVariables.set('base_url', 'https://api.sms-blossom.com');",
          "}",
          "if (!pm.collectionVariables.get('shop_domain')) {",
          "  pm.collectionVariables.set('shop_domain', 'test-shop.myshopify.com');",
          "}",
          "",
          "// Generate HMAC signatures for webhooks",
          "const crypto = require('crypto');",
          "",
          "// Generate webhook signature",
          "const webhookSecret = 'your-webhook-secret';",
          "const webhookBody = pm.request.body.raw || '';",
          "const webhookSignature = crypto.createHmac('sha256', webhookSecret).update(webhookBody).digest('base64');",
          "pm.collectionVariables.set('webhook_signature', webhookSignature);",
          "",
          "// Generate Mitto signature",
          "const mittoSecret = 'your-mitto-secret';",
          "const mittoBody = pm.request.body.raw || '';",
          "const mittoSignature = crypto.createHmac('sha256', mittoSecret).update(mittoBody).digest('hex');",
          "pm.collectionVariables.set('mitto_signature', mittoSignature);",
          "",
          "// Generate App Proxy signature",
          "const appProxySecret = 'your-app-proxy-secret';",
          "const appProxyBody = pm.request.body.raw || '';",
          "const appProxySignature = crypto.createHmac('sha256', appProxySecret).update(appProxyBody).digest('hex');",
          "pm.collectionVariables.set('signature', appProxySignature);"
        ]
      }
    }
  ]
